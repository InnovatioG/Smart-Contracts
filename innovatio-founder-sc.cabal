    , aeson
    , base
    , base16-bytestring
    , base64-bytestring
    , bech32
    , bytestring
    , containers
    , data-default
    , directory
    , filepath
    , flat
    , freer-extras
    , freer-simple
    , hex-text
    , lens
    , MissingH
    , old-locale
    , openapi3
    , prettyprinter
    , random
    , regex
    , serialise
    , split
    , stm
    , text
    , time
    , utf8-string

  default-extensions:
    NoImplicitPrelude
    BangPatterns
    NumericUnderscores
    OverloadedStrings

